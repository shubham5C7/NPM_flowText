{
  "name": "flowtext",
  "version": "1.0.0",
  "description": "A beautiful, feature-rich text editor with mentions support built with React and Tailwind CSS",
  "type": "module",
  "main": "./dist/flowtext.umd.js",
  "module": "./dist/flowtext.es.js",
  "exports": {
    ".": {
      "import": "./dist/flowtext.es.js",
      "require": "./dist/flowtext.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "text-editor",
    "mentions",
    "tailwind",
    "npm",
    "rich-text",
    "wysiwyg",
    "contenteditable"
  ],
  "author": "Shubham",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite": "^7.2.4"
  }
}